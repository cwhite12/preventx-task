pipeline {
    agent any

    tools {
        maven 'Maven3'
        jdk 'JDK17'
    }

    environment {

        ALLURE_RESULTS = 'target/allure-results'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ”„ Cloning Repository...'
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                echo 'ğŸ”¨ Running Maven Tests...'
                sh 'mvn clean test'
            }
        }

        stage('Allure Report') {
            steps {
                echo 'ğŸ“Š Generating Allure Results...'
            }
            post {
                always {
                    allure([
                        includeProperties: false,
                        jdk: '',
                        results: [[path: "${env.ALLURE_RESULTS}"]]
                    ])
                }
            }
        }
    }

    post {
        always {
            echo 'ğŸ“¦ Pipeline finished!'
        }
        success {
            echo 'âœ… Build Success!'
        }
        failure {
            echo 'âŒ Build Failed!'
        }
    }
}